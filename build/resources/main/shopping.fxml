<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShoppingController">
   <ScrollPane layoutX="17.0" layoutY="80.0" prefHeight="350.0" prefWidth="460.0">
      <VBox fx:id="itemBox" fillWidth="false" layoutX="27.0" layoutY="80.0" spacing="10.0">
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding></VBox>
   </ScrollPane>
   <Label layoutX="27.0" layoutY="40.0" prefHeight="30.0" prefWidth="450.0" text="Books, food, and medical products are exempt from basic sales tax.">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Label>
   <Button fx:id="addButton" alignment="CENTER" layoutX="125.0" layoutY="530.0" mnemonicParsing="false" onAction="#moreItems" prefHeight="30.0" prefWidth="100.0" text="More Items">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Button>
   <Button fx:id="doneButton" disable="true" layoutX="275.0" layoutY="530.0" mnemonicParsing="false" onAction="#done" prefHeight="30.0" prefWidth="100.0" text="Done">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Button>
   <Label fx:id="notice" layoutX="22.0" layoutY="467.0" prefHeight="30.0" prefWidth="450.0" text="Please enter valid item details or delete empty fields" textFill="RED" visible="false">
      <font>
         <Font name="Arial Bold Italic" size="13.0" />
      </font>
   </Label>
</AnchorPane>
